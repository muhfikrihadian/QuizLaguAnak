<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarCustom"
        android:background="@color/ColorTransparent"
        app:theme="@style/AppTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:padding="@dimen/_5sdp">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:slideInterval="3000" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_frame" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/btnSumatera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">

                    <RelativeLayout style="@style/RLFeature">

                        <ImageView
                            android:src="@drawable/ic_sumatera"
                            style="@style/IVFeature" />

                        <ImageView
                            android:src="@drawable/ic_frame"
                            style="@style/IVFeatureFrame" />
                    </RelativeLayout>

                    <TextView
                        android:text="Sumatera"
                        style="@style/TVFeature" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnJawa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">

                    <RelativeLayout style="@style/RLFeature">

                        <ImageView
                            android:src="@drawable/ic_jawa"
                            style="@style/IVFeature" />

                        <ImageView
                            android:src="@drawable/ic_frame"
                            style="@style/IVFeatureFrame" />
                    </RelativeLayout>

                    <TextView
                        android:text="Jawa"
                        style="@style/TVFeature" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/btnKalimantan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">

                    <RelativeLayout style="@style/RLFeature">

                        <ImageView
                            android:src="@drawable/ic_kalimantan"
                            style="@style/IVFeature" />

                        <ImageView
                            android:src="@drawable/ic_frame"
                            style="@style/IVFeatureFrame" />
                    </RelativeLayout>

                    <TextView
                        android:text="Kalimantan"
                        style="@style/TVFeature" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnSulawesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">

                    <RelativeLayout style="@style/RLFeature">

                        <ImageView
                            android:src="@drawable/ic_sulawesi"
                            style="@style/IVFeature" />

                        <ImageView
                            android:src="@drawable/ic_frame"
                            style="@style/IVFeatureFrame" />
                    </RelativeLayout>

                    <TextView
                        android:text="Sulawesi"
                        style="@style/TVFeature" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/btnMalukuIrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">

                    <RelativeLayout style="@style/RLFeature">

                        <ImageView
                            android:src="@drawable/ic_irian"
                            style="@style/IVFeature" />

                        <ImageView
                            android:src="@drawable/ic_frame"
                            style="@style/IVFeatureFrame" />
                    </RelativeLayout>

                    <TextView
                        android:text="Maluku &amp; Irian Jaya"
                        style="@style/TVFeature" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:visibility="invisible">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>